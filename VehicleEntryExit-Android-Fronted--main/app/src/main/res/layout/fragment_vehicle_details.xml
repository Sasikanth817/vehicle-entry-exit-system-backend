<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".sg.VehicleDetailsFragment"
    android:background="#E0E0E0">

    <!-- Title Bar -->

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFA500"
        android:gravity="center"
        android:padding="16dp"
        android:text="VEHICLE DETAILS"
        android:textColor="#FFF"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/backButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="#FFA500"
        android:text="BACK"
        android:textColor="@android:color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/vehicleNoLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="40dp"
        android:padding="16dp"
        android:text="Vehicle No"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/backButton" />

    <TextView
        android:id="@+id/vehicleNoText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:padding="16dp"
        android:text="AP05BN2008"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/vehicleNoLabel"
        app:layout_constraintTop_toTopOf="@+id/vehicleNoLabel" />

    <TextView
        android:id="@+id/driverNameLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:text="Driver Name"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/vehicleNoLabel"
        app:layout_constraintTop_toBottomOf="@id/vehicleNoLabel" />

    <TextView
        android:id="@+id/driverNameText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:padding="16dp"
        android:text="Tharun D"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.468"
        app:layout_constraintStart_toEndOf="@id/driverNameLabel"
        app:layout_constraintTop_toTopOf="@+id/driverNameLabel" />

    <TextView
        android:id="@+id/vehicleTypeLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:text="Type Of Vehicle"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/driverNameLabel"
        app:layout_constraintTop_toBottomOf="@id/driverNameLabel" />

    <TextView
        android:id="@+id/vehicleStatusLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="64dp"
        android:padding="16dp"
        android:text="Status Of Vehicle"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/vehicleTypeLabel"
        app:layout_constraintTop_toBottomOf="@id/vehicleTypeLabel" />

    <TextView
        android:id="@+id/GateLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="72dp"
        android:padding="16dp"
        android:text="Gate No"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/vehicleStatusLabel"
        app:layout_constraintTop_toBottomOf="@id/vehicleStatusLabel" />

    <TextView
        android:id="@+id/vehicleTypeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:padding="16dp"
        android:text="Car"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.465"
        app:layout_constraintStart_toEndOf="@id/vehicleTypeLabel"
        app:layout_constraintTop_toTopOf="@+id/vehicleTypeLabel" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        tools:ignore="MissingConstraints">

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        tools:ignore="MissingConstraints">

        <TextView
            android:text="GATE :"
            android:textStyle="bold"
            android:layout_height="0dp"
            android:layout_width="0dp"/>

    </LinearLayout>

    <Button
        android:id="@+id/btnSubmit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:backgroundTint="#FFA500"
        android:text="SUBMIT"
        android:textColor="@android:color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/GateLabel"
        tools:ignore="MissingConstraints" />

    <Spinner
        android:id="@+id/spinnerGate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="124dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toEndOf="@+id/GateLabel"
        app:layout_constraintTop_toTopOf="@+id/GateLabel"
        tools:ignore="MissingConstraints" />

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="123dp"
        android:layout_height="103dp"
        android:layout_marginStart="68dp"
        android:textColor="@color/orange"
        app:layout_constraintStart_toEndOf="@+id/vehicleStatusLabel"
        app:layout_constraintTop_toTopOf="@+id/vehicleStatusLabel">

        <RadioButton
            android:id="@+id/radioEntry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ENTRY"
            android:textColor="@color/orange"
            android:textStyle="bold"
            android:textSize="20sp"
            tools:ignore="MissingConstraints" />

        <RadioButton
            android:id="@+id/radioExit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="EXIT"
            android:textStyle="bold"
            android:textColor="@color/orange"
            android:textSize="20sp"
            tools:ignore="MissingConstraints" />
    </RadioGroup>

</androidx.constraintlayout.widget.ConstraintLayout>
