<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <TextView
            android:id="@+id/tvDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="05/21/2022"
            android:textColor="#1A2B5F"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/timeInLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivTimeInIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:contentDescription="Time In Icon"
                android:src="@drawable/ic_time_in"
                android:tint="#4CAF50" />

            <TextView
                android:id="@+id/tvTimeInDetails"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:text="TIME IN - ABC 126, Honda Civic 2022, C"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/tvTimeInTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="02:53:21 PM"
                android:textColor="#666666" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/timeOutLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivTimeOutIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:contentDescription="Time Out Icon"
                android:src="@drawable/ic_time_out"
                android:tint="#FF0000" />

            <TextView
                android:id="@+id/tvTimeOutDetails"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:text="TIME OUT - ABC 126, Honda Civic 2022, C"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/tvTimeOutTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="02:53:21 PM"
                android:textColor="#666666" />
        </LinearLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>